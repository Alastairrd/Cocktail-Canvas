<!doctype html>
<html>
  <head>
    <title>Create Menu: <%=appData.appName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <nav class="topnav">
      <ul>
        <li><a href="../"><%=appData.appName%></a></li>
        <li><a href="../list">Lists</a></li> <!--todo-->
        <li><a href="../search">Search</a></li> <!--todo-->
        <li><a class="active" href="../menus/editlist">Edit Menus</a></li> <!--todo-->
        <li><a href="../menus/create">Create</a></li>
        <li><a href="../about">About</a></li>
      <!--if no user, show login-->
      <% if(user == null){ %>
          <li class="right"><a href="../users/login">Log in</a></li>
      <!--if user exists, show logout-->
      <% } else { %>
          <li class="right"><a href="../logout">Logout</a></li>
          <% } %>
      </ul>
    </nav>
    <main>
      <h1>List of your current menus: <%=appData.appName%></h1>
      <h2>Pick one of your menus to edit!</h2>
      <ul>
        <% menuList.forEach(function(menu) { %>
          <li>
            <form action="/menus/editmenu" method="GET">
                <label for="name">Menu Name: <%= menu.menu_name %></label>
                <label for="desc">Menu Description: <%= menu.menu_desc %></label>
              <input type="hidden" name="menu_id" value="<%= menu.menu_id %>">
              <button type="submit">Edit Menu</button>
            </form>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>