<!doctype html>
<html>
  <head>
    <title>Register for <%=appData.appName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <nav class="topnav">
      <ul>
        <li><a class="active" href="../"><%=appData.appName%></a></li>
        <li><a href="../list">Lists</a></li> <!--todo-->
        <li><a href="../search">Search</a></li> <!--todo-->
        <li><a href="../menus/editlist">Edit Menus</a></li> <!--todo-->
        <li><a href="../menus/create">Create</a></li>
        <li><a href="../about">About</a></li>
      <!--if no user, show login-->
      <% if(user == null){ %>
          <li class="right"><a href="../users/login">Log in</a></li>
      <!--if user exists, show logout-->
      <% } else { %>
          <li class="right"><a href="../logout">Logout</a></li>
          <% } %>
      </ul>
    </nav>
    <main>
      <h1>Register for <%=appData.appName%></h1>
      <form method="POST" action="registered">
        <p>First name: <input id="first" type="text" name="first" /></p>
        <p>Last name: <input id="last" type="text" name="last"/></p>
        <p>Email: <input id="email" type="text" name="email"/></p>
        <p>Email: <input id="company" type="text" name="company"/></p>
        <p>Username: <input id="username" type="text" name="username" value="" minlength ="8" maxlength="16" /></p>
        <p>Password: <input id="password" type="password" name="password" value="" minlength ="8" maxlength="24" /></p>
        <input type="submit" value="Register" />
      </form>
    </main>
  </body>
</html>